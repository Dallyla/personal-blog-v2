<%- include("partials/header") -%> 

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control input-group-sm" type="text" name="postTitle" id="title">
        <label for="post">Post</label>
        <textarea class="form-control input-group-sm" rows="6" name="postContent" id="post"></textarea>
    </div>
    <button class="btn btn-sm btn-info" type="submit" name=publishButton>Publish</button>
</form>

<%- include("partials/footer") -%>